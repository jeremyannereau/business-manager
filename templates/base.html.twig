<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes">
        
        <title>{% block title %}Business Manager{% endblock %}</title>
        
        {# PWA Meta Tags #}
        <meta name="description" content="Gestion de ton projet entrepreneurial - Mon Assistant NumÃ©rique">
        <meta name="theme-color" content="#667eea">
        <meta name="mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-capable" content="yes">
        <meta name="apple-mobile-web-app-status-bar-style" content="default">
        <meta name="apple-mobile-web-app-title" content="Business Manager">
        
        {# PWA Manifest #}
        <link rel="manifest" href="/manifest.json">
        
        {# Icons #}
        <link rel="icon" type="image/png" sizes="192x192" href="{{ asset('build/images/icon-192x192.png') }}">
        <link rel="apple-touch-icon" sizes="192x192" href="{{ asset('build/images/icon-192x192.png') }}">
        
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            
            {# Service Worker Registration #}
            <script>
                if ('serviceWorker' in navigator && window.location.protocol === 'https:') {
                    window.addEventListener('load', () => {
                        navigator.serviceWorker.register('/service-worker.js')
                            .then(registration => {
                                console.log('SW registered:', registration);
                            })
                            .catch(error => {
                                console.log('SW registration failed:', error);
                            });
                    });
                }
            </script>
        {% endblock %}
    </head>
    <body>
        <div id="app">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>